<config>
  <sections>
    <admin>
      <groups>
        <!-- Uncomment if you need set the admin theme from admin panel -->
        <mageek_openmagetheme translate="label" module="mageek_openmagetheme">
          <label>Admin Theme</label>
          <frontend_type>text</frontend_type>
          <sort_order>3</sort_order>
          <show_in_default>1</show_in_default>
          <fields>
            <theme_name translate="label comment">
              <label>Theme Name</label>
              <comment><![CDATA[Override the default Openmage admin theme <i>app/design/adminhtml/default/default</i> with your own theme <i>app/design/adminhtml/default/your-theme-name</i>.]]></comment>
              <frontend_type>text</frontend_type>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
            </theme_name>
          </fields>
        </mageek_openmagetheme>

      </groups>
    </admin>
  </sections>
</config>
